<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recycler_profile_image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            app:civ_border_width="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_name_id"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_institution_id"

                android:textColor="#08050C"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_blood_Group_id"
                android:textColor="#740202"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_donation_id"
                android:textColor="#BB6F04"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"

                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>






</RelativeLayout>

