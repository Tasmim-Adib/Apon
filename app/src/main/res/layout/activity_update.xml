<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/update_toolbar_id"
        ></include>

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/last_blood_donation_edit"
        android:hint="Date of last blood Donation"
        android:layout_marginTop="150dp"

        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_edit_text"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_blood_donation_textView"
        android:layout_below="@+id/last_blood_donation_edit"
        android:text="** Mention the date of your last blood donation. The format is like : 1 Feb"
        android:textColor="#E20D0D"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Done"
        android:background="@drawable/custom_button"
        android:id="@+id/last_blood_donation_button"
        android:layout_below="@+id/last_blood_donation_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>